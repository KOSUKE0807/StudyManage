<%= javascript_pack_tag 'test' %>
<%= javascript_pack_tag 'barGraph' %>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Hi! <%=@current_user.user_name %></strong>  You login as Student.
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>


<div  class="container-lg">
  <div class="first-sectino-wrapper">
    <sectino class="choise-school-section">
      <div>志望校</div>
      <ul>
        <li><%= @sh.school_choise %></li>
      </ul>
    </sectino>
    <section class="goal-section">
      <div>今月の目標</div>
      <ul>
        <li><%= @mg.goal %></li>
      </ul>
    </section>
  </div>
  <div class="second-section-wrapper">
    <div class= "teacher-icon">
      <i class="navbar-brand fas fa-user-circle" style="font-size: 40px;"></i>
      <span class="message-teacher-name" style="font-size: 12px">
        <span><%= @m.teacher.user_name %>先生</span>
      </span>
    </div>
    <div class="coment-balloon">
      <%= @m.comment %>
    </div>
  </div>
  <div class="third-section-wrapper">
    <table>
      <tr>
        <th>今日</th>
        <th>今週</th>
        <th>今月</th>
        <th>合計</th>
      </tr>
      <tr>
        <td>60分</td>
        <td>200分</td>
        <td>1200分</td>
        <td>1460分</td>
      </tr>
    </table>
  </div>
  <div class="fourth-sectino-wrapper">
    <div class="wrap-chart">
      <div class="chart-container" style="position: relative; width: 100%; height:  100%;">
        <canvas id="myChart"></canvas>
      </div>
    </div>
  </div>
</div>
