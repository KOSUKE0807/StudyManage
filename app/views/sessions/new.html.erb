<div class="top_container">
  <div class="login_container">
    <%= form_for(:session, url: login_path) do |f| %>
      <h2 class="font-italic">login</h2>
      <div class="input_div first_input_div">
        <i class="fas fa-user"></i>  
        <div>
          <h5 class="font-italic">Email</h5>
          <%= f.email_field :email, class: "input" %>
        </div>
      </div>
      <div class="input_div second_input_div">
        <i class="fas fa-lock"></i>  
        <div>
          <h5 class="font-italic">Password</h5>
          <%= f.password_field :password, class: "input" %>
        </div>
      </div>
      <%= f.submit "Log in",class:"btn stu_sign_in_btn" %>
    <% end %>
  </div>
</div>  
