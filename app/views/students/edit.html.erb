<div style="margin-top: 80px;" class="teacher-edit-container">
  <div class="form-wrapper">
    <div class="title">
      <h2>プロフィール編集</h2>
    </div>
    <div class="teacher_icon">
    <% if @current_student.image.present? %>
      <%= image_tag @current_student.image.url, class: "teacher-profile-img-self image" %>
      <% else %>
      現在プロフィール画像が設定されていません
    <% end %>
    </div>
    <%= form_for(@current_student, url: student_path) do |f| %>
      <div class="form-group row">
        <%= f.label :user_name, "氏名", class: "col-4 label" %>
        <%= f.text_field :user_name, class: "form-control col-8" %>
      </div>
      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-4 label" %>
        <%= f.text_field :email, class: "form-control col-8" %>
      </div>
      <div class="form-group row">
        <%= f.label :image, "アイコン画像", class: "col-4 label" %>
        <%= f.file_field :image, class: "file-field form-control col-8" %>
      </div>
      <div class="form-group" style="text-align: center;">
        <%= f.submit "更新", class: "btn btn-outline-warning editButton" %>
      </div>
    <% end %>
  </div>
</div>